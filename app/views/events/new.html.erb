<%if flash[:errors]%>
<%flash[:errors].each do |error|%>
<li style="color:red"><%=error%></li>
<%end%>
<%end%>


<%=form_with model: @event do |f|%>
<%=f.label :title%><br>
<%=f.text_field :title%>
<br>
<br>
<%=f.label :date%><br>
<%=f.datetime_field :time%>
<br>
<br>
<%=f.label "Details"%><br>
<%=f.text_area :details%>
<br>
<br>
<%=f.submit%>
<%end%>
<hr>
Logged In As: <%=link_to session[:username], user_path(session[:id])%> 
<br>
<%= button_to 'log out', {:controller => :sessions, :action => 'destroy'}, :method => :delete%>