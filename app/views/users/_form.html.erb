<%= form_with model: @user, :url => url_for(:controller => 'users', :action => 'create') do | f |%>
<%=f.label :username%><br>
<%=f.text_field :username%>
<br>
<br>
<%=f.label :first_name%><br>
<%=f.text_field :first_name%>
<br>
<br>
<%=f.label :last_name%><br>
<%=f.text_field :last_name%>
<br>
<br>
<%=f.label :age%><br>
<%=f.number_field :age%>
<br>
<br>
<%=f.label "Bio (max 140 chars)"%><br>
<%=f.text_area :bio%>
<br>
<br>
<%= f.label :password %>
<%= f.password_field :password %>
<br/>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>
<%=f.submit%>
<%end%>

<hr>
Logged In As: <%=link_to session[:username], user_path(session[:id])%> 
<br>
<%= button_to 'log out', {:controller => :sessions, :action => 'destroy'}, :method => :delete%>

